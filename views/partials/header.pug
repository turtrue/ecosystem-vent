header.header
    .header__body
        a(href='/').header__logo
            img(src='/assets/header/img/logo.jpg' alt='ecosystem производство и поставка воздуховодов')

        nav
            ul.nav
                if isHome
                    li.nav__link
                        a.active(href='/') Главная
                else
                    li.nav__link
                        a(href='/') Главная
                if isCatalog
                    li.nav__link
                        a.active(href='/catalog') Каталог
                else
                    li.nav__link
                        a(href='/catalog') Каталог
                if isService
                    li.nav__link
                        a.active(href='/service') Услуги
                else
                    li.nav__link
                        a(href='/service') Услуги

        +btn(
            'tel:+78435052775',
            '#phone',
            'Позвоните нам',
            '',
            'btn--header-media',
            'btn__logo--header-media',
            'btn__text--header-media')