doctype html
html(lang='ru')
    head
        include ../partials/head.pug
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl' crossorigin='anonymous')
    body
        nav(class='navbar fixed-top navbar-expand-lg navbar-dark bg-dark')
            div(class='container-fluid')
                ul(class='navbar-nav')
                    li(class='nav-item')
                        a(class='nav-link' aria-current='page' href='#') Главная
                    li(class='nav-item')
                        a(class='nav-link' href='#') Список продукции
                    li(class='nav-item')
                        a(class='nav-link active' href='/admin/create-product') Создать продукт

        div(class='container-md' style='margin-top: 150px')
            form
                h3(style='text-align: center') Продукт
                div(id='product' class='mb-5')
                    label(class='form-label') Название продукта
                    input(class='form-control mb-2')

                    label(class='form-label') Фотография товара
                    input(class='form-control mb-2' type='file' name='photo')

                    label(class='form-label') Описание фотографии товара
                    input(class='form-control')

                h3(style='text-align: center') Параграф
                div(id='main' class='mb-5')
                    label(class='form-label') Параграф
                    textarea(class='form-control' rows='1')

                h3(style='text-align: center') Список
                div(id='list' class='mb-5')
                    label(class='form-label') Заглавие списка
                    input(class='form-control')

                    label(class='form-label') 1. Элемент списка
                    textarea(class='form-control' rows='1')

                h3(style='text-align: center') Заглавие секции
                div(id='sectionTitle' class='mb-5')
                    label(class='form-label') Заглавие секции
                    input(class='form-control')

                h3(style='text-align: center') Картинки
                div(id='images' class='mb-5')
                    label(class='form-label') Картинка №1
                    input(class='form-control mb-2' type='file' name='image')

                    label(class='form-label') Описание картинки №1
                    input(class='form-control')

                div(style='text-align: right')
                    button(type='submit' class='btn btn-outline-primary') Создать страницу

        script(src='/scripts/create-product.js')